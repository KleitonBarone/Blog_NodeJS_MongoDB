<div class="card">
  <div class="card-body">

    <h2>Editar Usuario:</h2>
    <hr>
    <form action="/usuarios/update" method="POST">
      <input type="hidden" name="id" value="{{usuario._id}}">
      <div class="form-group">
        <label for="nome">Nome</label>
        <input name="nome" type="text" class="form-control" id="nome" placeholder="Nome da categoria" value="{{usuario.nome}}">
      </div>

      <div class="form-group">
        <label for="slug">Email</label>
        <input type="text" class="form-control" id="slug" name="slug" placeholder="Slug da categoria" aria-describedby="slughelp" value="{{usuario.email}}">
      </div>

      <button type="submit" class="btn btn-primary">Editar</button>

    </form>
  </div>
</div>